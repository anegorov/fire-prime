{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
  "rewrites": [ {
    "source": "**",
    "destination": "/index.html"
  } ],
    "public": "dist/fire",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": {
    "predeploy": "npm --prefix \"functions\" run build",
    "source": "functions"
  }
}
